<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:weightSum="3">

        <com.vietinterview.getbee.customview.NunitoBoldTextView
            android:id="@+id/tvTransfer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2.9"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/title_dialog_choose_send_cv"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/btnCancel"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:visibility="gone" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/borderbutton_yellow"
        android:padding="1dp">

        <com.vietinterview.getbee.customview.NunitoBoldTextView
            android:id="@+id/tvHunt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="60dp"
            android:background="#FFD215"
            android:drawableLeft="@drawable/ic_hunt"
            android:drawablePadding="-48dp"
            android:gravity="center"
            android:paddingLeft="58dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="Hunt"
            android:textColor="@color/black"
            android:textSize="26sp" />

        <ImageView
            android:id="@+id/imgInfoHunt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="#F0C820"
            android:padding="20dp"
            android:src="@drawable/ic_info_hunt_black" />

        <com.vietinterview.getbee.customview.NunitoTextView
            android:id="@+id/tvContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvHunt"
            android:background="#E8C21F"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:text="@string/hunt_reward"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/btnHunt"
            android:layout_width="153dp"
            android:layout_height="40dp"
            android:layout_below="@+id/tvContent"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:background="@drawable/borderbutton"
            android:gravity="center"
            android:text="@string/apply_cv"
            android:textColor="@color/white"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/borderbutton"
        android:padding="1dp">

        <com.vietinterview.getbee.customview.NunitoBoldTextView
            android:id="@+id/tvSentCV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="60dp"
            android:background="#3C3B6E"
            android:drawableLeft="@drawable/ic_send_cv"
            android:drawablePadding="-08dp"
            android:gravity="center"
            android:paddingLeft="28dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="@string/cv_reward_title"
            android:textColor="@color/white"
            android:textSize="26sp" />

        <ImageView
            android:id="@+id/imgInfoSentCV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="#484780"
            android:padding="20dp"
            android:src="@drawable/ic_info_hunt" />

        <com.vietinterview.getbee.customview.NunitoTextView
            android:id="@+id/tvContentSendCV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvSentCV"
            android:background="#31315D"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:text="@string/cv_reward"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnSendCV"
            android:layout_width="153dp"
            android:layout_height="40dp"
            android:layout_below="@+id/tvContentSendCV"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:background="@drawable/borderbutton_yellow"
            android:gravity="center"
            android:text="@string/apply_cv"
            android:textColor="@color/black"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>
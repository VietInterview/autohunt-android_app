<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_bg"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:background="@drawable/border_red_top_left_right"
            android:orientation="horizontal"
            android:weightSum="3">

            <com.vietinterview.getbee.customview.RobotoBoldTextView
                android:id="@+id/tvTransfer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2.9"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/noti_title"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>


        <com.vietinterview.getbee.customview.RobotoMediumTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:gravity="center"
            android:text="Bạn có chắc chắn muốn gửi thư phỏng vấn tới ứng viên này?"
            android:textColor="#677B8D"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="2">


            <com.vietinterview.getbee.customview.RobotoBoldButton
                android:id="@+id/btnNo"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/borderbutton_notyet_send"
                android:text="Gửi từ chối"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <com.vietinterview.getbee.customview.RobotoBoldButton
                android:id="@+id/btnOK"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/borderbutton_blue"
                android:text="Đồng ý"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.vietinterview.getbee.customview.NunitoEditText
        android:id="@+id/edtSearchJob"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:drawableRight="@drawable/ic_search_vector"
        android:gravity="center|left"
        android:hint="@string/input_search_key"
        android:padding="@dimen/activity_vertical_margin"
        android:textSize="18sp" />

    <com.vietinterview.getbee.customview.NunitoTextView
        android:id="@+id/tvHeader"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center|left"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:textSize="18sp" />

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </ListView>
</LinearLayout>
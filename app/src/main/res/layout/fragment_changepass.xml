<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="89dp">

        <com.vietinterview.getbee.view.NunitoTextView
            android:id="@+id/tvTitleOldPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:padding="@dimen/activity_vertical_margin"
            android:text="Nhập mật khẩu "
            android:textColor="#B1B1BA"
            android:textSize="16sp" />

        <com.vietinterview.getbee.view.NunitoTextView
            android:id="@+id/tvOldPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="@dimen/activity_vertical_margin"
            android:text=""
            android:textColor="#191830"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:padding="@dimen/activity_vertical_margin"
            android:src="@drawable/ic_pencil"
            android:visibility="gone" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:background="#000000" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="89dp">

        <com.vietinterview.getbee.view.NunitoTextView
            android:id="@+id/tvTitleNewPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:padding="@dimen/activity_vertical_margin"
            android:text="Nhập mật  khẩu mới"
            android:textColor="#B1B1BA"
            android:textSize="16sp" />

        <com.vietinterview.getbee.view.NunitoTextView
            android:id="@+id/tvNewPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:inputType="textPassword"
            android:padding="@dimen/activity_vertical_margin"
            android:text="hiepnn1991"
            android:textColor="#191830"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:padding="@dimen/activity_vertical_margin"
            android:src="@drawable/ic_pencil"
            android:visibility="gone" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:background="#000000" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="89dp">

        <com.vietinterview.getbee.view.NunitoTextView
            android:id="@+id/tvTitleRetype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:padding="@dimen/activity_vertical_margin"
            android:text="Nhập lại mật khẩu "
            android:textColor="#B1B1BA"
            android:textSize="16sp" />

        <com.vietinterview.getbee.view.NunitoTextView
            android:id="@+id/tvRetype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:inputType="textPassword"
            android:padding="@dimen/activity_vertical_margin"
            android:text="hiepnn1991"
            android:textColor="#191830"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:padding="@dimen/activity_vertical_margin"
            android:src="@drawable/ic_note" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:background="#000000" />
    </RelativeLayout>
</LinearLayout>
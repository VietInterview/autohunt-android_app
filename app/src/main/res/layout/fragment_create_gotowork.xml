<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp">

        <com.vietinterview.getbee.customview.RobotoMediumTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/font_fontFamily_medium"
            android:text="@string/work_time"
            android:textColor="#042E51"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/llDate"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/border_gray"
            android:orientation="horizontal">

            <com.vietinterview.getbee.customview.ClearableRegularEditText
                android:id="@+id/edtWorkTime"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:editable="false"
                android:paddingHorizontal="14dp" />

            <ImageView
                android:id="@+id/imgChooseDate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginVertical="10dp"
                android:layout_weight="0.2"
                android:gravity="center"
                android:scaleType="center"
                android:src="@drawable/ic_calendar"
                android:text="VND"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp">

        <com.vietinterview.getbee.customview.RobotoMediumTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/font_fontFamily_medium"
            android:text="@string/warranty_time"
            android:textColor="#042E51"
            android:textSize="16sp" />

        <com.vietinterview.getbee.customview.ClearableRegularEditText
            android:id="@+id/edtWarranty"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/border_gray_disable"
            android:editable="false"
            android:paddingHorizontal="14dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="14dp"
        android:paddingVertical="10dp">

        <com.vietinterview.getbee.customview.RobotoMediumButton
            android:id="@+id/btnUpdateWork"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/borderbutton_blue"
            android:drawableTint="@color/white"
            android:fontFamily="@string/font_fontFamily_medium"
            android:padding="10dp"
            android:text="@string/update_title"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>
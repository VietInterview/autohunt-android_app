<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.badoualy.stepperindicator.StepperIndicator
        android:id="@+id/stepper_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:stpi_circleStrokeWidth="2dp"
        app:stpi_indicatorColor="@color/step_complete"
        app:stpi_labelSize="14sp"
        app:stpi_labels="@array/stepLabels"
        app:stpi_lineDoneColor="@color/step_complete" />

    <com.vietinterview.getbee.customview.NonSwipeableViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />
</LinearLayout>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F9FF"
    android:nestedScrollingEnabled="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F2F9FF"
        android:nestedScrollingEnabled="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.v7.widget.CardView
            android:id="@+id/listInterview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="true"
            app:cardCornerRadius="10dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:nestedScrollingEnabled="true"
                android:orientation="vertical">

                <com.vietinterview.getbee.customview.RobotoMediumTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="16dp"
                    android:fontFamily="@string/font_fontFamily_medium"
                    android:text="Thông tin phỏng vấn"
                    android:textColor="#9FB6CB"
                    android:textSize="14sp" />

                <com.vietinterview.getbee.customview.FlowLayout
                    android:id="@+id/flowListInterview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="true"
                    android:orientation="vertical"
                    android:scrollbars="vertical"
                    app:horizontalSpacing="5dp"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    app:verticalSpacing="0dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:background="@drawable/border_top_bottom"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <com.vietinterview.getbee.customview.RobotoTextView
                        android:id="@+id/tvAddRound"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_add_interview"
                        android:drawablePadding="10dp"
                        android:text="Thêm vòng phỏng vấn"
                        android:textColor="#3C84F7"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:orientation="horizontal"
                    android:paddingHorizontal="10dp">

                    <com.vietinterview.getbee.customview.RobotoMediumButton
                        android:id="@+id/btnNotAccept"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/borderbutton_notyet_send"
                        android:backgroundTint="#9FB6CB"
                        android:drawableLeft="@drawable/ic_not_accept"
                        android:padding="10dp"
                        android:text="@string/not_accept"
                        android:textColor="#ffffff"
                        android:textSize="16sp" />

                    <com.vietinterview.getbee.customview.RobotoMediumButton
                        android:id="@+id/btnNext"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/borderbutton_blue"
                        android:drawableLeft="@drawable/ic_next_step"
                        android:drawablePadding="5dp"
                        android:fontFamily="@string/font_fontFamily_medium"
                        android:padding="10dp"
                        android:text="Offer"
                        android:textColor="#ffffff"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:id="@+id/llFooter"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_below="@+id/listInterview"
            android:layout_gravity="center"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/borderbutton"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <com.vietinterview.getbee.customview.RobotoBoldButton
                android:id="@+id/btnSeeInvite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_see_eye"
                android:drawablePadding="10dp"
                android:text="Mẫu thư mời phỏng vấn"
                android:textColor="@color/white" />
        </LinearLayout>

        <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cardReject"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/llFooter"
            app:cardCornerRadius="10dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <com.vietinterview.getbee.customview.RobotoMediumTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="8dp"
                    android:fontFamily="@string/font_fontFamily_medium"
                    android:text="Thông báo"
                    android:textColor="#042E51"
                    android:textSize="20sp" />

                <com.vietinterview.getbee.customview.RobotoMediumTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="8dp"
                    android:fontFamily="@string/font_fontFamily_medium"
                    android:gravity="center"
                    android:text="Ứng viên này đã bị từ chối vì lý do kinh nghiệm chưa đáp ứng!"
                    android:textColor="#FF5A5A"
                    android:textSize="16sp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</ScrollView>
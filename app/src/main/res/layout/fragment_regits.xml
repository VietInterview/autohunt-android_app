<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="220dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <com.vietinterview.getbee.customview.RobotoMediumTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@string/font_fontFamily_medium"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:text="@string/regist"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:textStyle="bold" />

            <com.vietinterview.getbee.customview.RobotoTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:text="@string/create_new_acc"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/shape"
            android:elevation="2dp"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/llName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/edittextbackground"
                android:gravity="center_vertical">


                <ImageView
                    android:id="@+id/imgName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="0.5"
                    android:src="@drawable/ic_user_notfocus" />

                <View
                    android:id="@+id/lineName"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/gray_not_focus" />

                <com.vietinterview.getbee.customview.ClearableRegularEditText
                    android:id="@+id/edtName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:background="@null"
                    android:hint="@string/fullname"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/black" />

                <ImageView
                    android:id="@+id/icRightName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="0.5"
                    android:src="@drawable/ic_note"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/edittextbackground"
                android:gravity="center_vertical">


                <ImageView
                    android:id="@+id/imgMail"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_margin="10dp"
                    android:layout_weight="0.5"
                    android:src="@drawable/ic_mail_notfocus" />

                <View
                    android:id="@+id/lineEmail"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/gray_not_focus" />

                <com.vietinterview.getbee.customview.ClearableRegularEditText
                    android:id="@+id/edtEmail"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:background="@null"
                    android:hint="Email"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/black" />

                <ImageView
                    android:id="@+id/icRightEmail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="0.5"
                    android:src="@drawable/ic_tickok"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llSDT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/edittextbackground"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/imgSDT"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="0.5"
                    android:src="@drawable/ic_phone_notfocus" />

                <View
                    android:id="@+id/lineSDT"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/gray_not_focus" />

                <com.vietinterview.getbee.customview.ClearableRegularEditText
                    android:id="@+id/edtPhone"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:background="@null"
                    android:hint="@string/phone_number"
                    android:inputType="phone"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/black" />

                <ImageView
                    android:id="@+id/icRightPhone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="0.5"
                    android:src="@drawable/ic_note"
                    android:visibility="gone" />
            </LinearLayout>

            <com.vietinterview.getbee.customview.ClearableRegularEditText
                android:id="@+id/edtJob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/edittextbackground"
                android:hint="@string/carrer"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/black" />

            <com.vietinterview.getbee.customview.ClearableRegularEditText
                android:id="@+id/edtAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/edittextbackground"
                android:hint="@string/address"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <com.vietinterview.getbee.customview.RobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:text="@string/have_acc"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <com.vietinterview.getbee.customview.RobotoBoldTextView
                    android:id="@+id/tvGoLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:text="@string/login"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Login"
                android:visibility="gone" />
        </LinearLayout>

        <com.vietinterview.getbee.customview.RobotoBoldButton
            android:id="@+id/btnSignup"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom|center"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/borderbutton"
            android:fontFamily=""
            android:text="@string/regist"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </LinearLayout>
</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.vietinterview.getbee.customview.RobotoTextView
        android:id="@+id/tvCountCV"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:textColor="#9FB6CB"
        android:textSize="14sp" />

    <com.chauthai.swipereveallayout.SwipeRevealLayout
        android:id="@+id/swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="-4dp"
        app:dragEdge="right"
        app:mode="same_level">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view1"
            android:layout_width="118dp"
            android:layout_height="118dp"
            android:background="@android:color/transparent"
            app:cardBackgroundColor="@android:color/transparent"
            card_view:cardCornerRadius="10dp"
            card_view:cardElevation="0dp">

            <LinearLayout
                android:id="@+id/secondaryContentFrameLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/borderbutton_blue_10"
                android:gravity="center|right"
                android:orientation="horizontal">

                <com.vietinterview.getbee.customview.RobotoRegularButton
                    android:id="@+id/btnShowDetailJob"
                    android:layout_width="118dp"
                    android:layout_height="118dp"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:drawableTop="@drawable/ic_info_white"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingTop="45dp"
                    android:textColor="@color/white" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="118dp"
            app:cardBackgroundColor="@color/white"
            card_view:cardCornerRadius="10dp"
            card_view:cardElevation="2dp"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:id="@+id/primaryContentCardView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/primaryContentCardView2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/primaryContentCardView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <com.vietinterview.getbee.customview.RobotoBoldTextView
                            android:id="@+id/tvcountJobOffer"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_weight="1"
                            android:gravity="right|bottom"
                            android:text="59"
                            android:textColor="@color/iconcolor"
                            android:textSize="24sp" />

                        <com.vietinterview.getbee.customview.RobotoTextView
                            android:id="@+id/tvsumJob"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_weight="1"
                            android:text="/100"
                            android:textColor="@color/iconcolor"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <com.vietinterview.getbee.customview.RobotoTextView
                        android:id="@+id/tvDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="left"
                        android:text="Hồ sơ mới gửi"
                        android:textColor="#9FB6CB"
                        android:textSize="12sp" />
                </LinearLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="fill_parent"
                    android:background="#4D979797" />

                <LinearLayout
                    android:id="@+id/primaryContentCardView3"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="6dp"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <com.vietinterview.getbee.customview.RobotoMediumTextView
                        android:id="@+id/tvname"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_weight="2"
                        android:ellipsize="end"
                        android:fontFamily="@string/font_fontFamily_medium"
                        android:inputType="none"
                        android:maxLines="2"
                        android:minLines="2"
                        android:text="adsfadsfsadfasfasdfdafsdfasdfsafsdffasdfsadfasdfsadfasdfadsfasdf"
                        android:textColor="#042E51"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgDeadline"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.1"
                            android:src="@drawable/ic_time_experi" />

                        <com.vietinterview.getbee.customview.RobotoTextView
                            android:id="@+id/tvStatus"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_weight="1"
                            android:gravity="center|left"
                            android:text="Sắp hết hạn"
                            android:textColor="#FF5A5A"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </com.chauthai.swipereveallayout.SwipeRevealLayout>
</LinearLayout>
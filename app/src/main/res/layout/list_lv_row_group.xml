<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llInfoGroup"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:paddingHorizontal="16dp"
    android:paddingTop="16dp">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_expandable_group"
        android:orientation="vertical"
        android:padding="8dp">


        <com.vietinterview.getbee.customview.NunitoTextView
            android:id="@+id/tvSchoolName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="32dp"
            android:paddingLeft="8dp"
            android:textColor="#505059"
            android:textSize="18sp" />

        <com.vietinterview.getbee.customview.NunitoTextView
            android:id="@+id/tvTime"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvSchoolName"
            android:layout_marginRight="32dp"
            android:paddingLeft="8dp"
            android:textColor="#B1B1BA"
            android:textSize="16sp" />

    </RelativeLayout>
</LinearLayout>